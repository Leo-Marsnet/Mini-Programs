/* 按钮基础样式 */
.ui-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border: none;
  outline: none;
  cursor: pointer;
  transition: all 0.2s ease;
  font-family: inherit;
  text-decoration: none;
  user-select: none;
  position: relative;
  overflow: hidden;
}

/* 按钮大小 */
.ui-button--small {
  height: 60rpx;
  padding: 0 24rpx;
  font-size: 24rpx;
  border-radius: 6rpx;
}

.ui-button--medium {
  height: 80rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.ui-button--large {
  height: 100rpx;
  padding: 0 40rpx;
  font-size: 32rpx;
  border-radius: 10rpx;
}

/* 按钮形状 */
.ui-button--square {
  border-radius: 0;
}

.ui-button--rounded {
  /* 使用默认圆角 */
}

.ui-button--circle {
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  padding: 0;
}

.ui-button--circle.ui-button--small {
  width: 60rpx;
  height: 60rpx;
}

.ui-button--circle.ui-button--large {
  width: 100rpx;
  height: 100rpx;
}

/* 块级按钮 */
.ui-button--block {
  width: 100%;
  display: flex;
}

/* 按钮类型 - 主要按钮 */
.ui-button--primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: 2rpx solid transparent;
}

.ui-button--primary:not(.ui-button--disabled):not(.ui-button--loading).ui-button--pressed {
  background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
  transform: scale(0.98);
}

/* 按钮类型 - 次要按钮 */
.ui-button--secondary {
  background: #f8f9fa;
  color: #495057;
  border: 2rpx solid #dee2e6;
}

.ui-button--secondary:not(.ui-button--disabled):not(.ui-button--loading).ui-button--pressed {
  background: #e9ecef;
  border-color: #ced4da;
  transform: scale(0.98);
}

/* 按钮类型 - 成功按钮 */
.ui-button--success {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: #ffffff;
  border: 2rpx solid transparent;
}

.ui-button--success:not(.ui-button--disabled):not(.ui-button--loading).ui-button--pressed {
  background: linear-gradient(135deg, #3d8bfe 0%, #00d4fe 100%);
  transform: scale(0.98);
}

/* 按钮类型 - 警告按钮 */
.ui-button--warning {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
  color: #ffffff;
  border: 2rpx solid transparent;
}

.ui-button--warning:not(.ui-button--disabled):not(.ui-button--loading).ui-button--pressed {
  background: linear-gradient(135deg, #f85a8a 0%, #fdd835 100%);
  transform: scale(0.98);
}

/* 按钮类型 - 危险按钮 */
.ui-button--danger {
  background: linear-gradient(135deg, #ff6b6b 0%, #ffa500 100%);
  color: #ffffff;
  border: 2rpx solid transparent;
}

.ui-button--danger:not(.ui-button--disabled):not(.ui-button--loading).ui-button--pressed {
  background: linear-gradient(135deg, #ff5252 0%, #ff9800 100%);
  transform: scale(0.98);
}

/* 幽灵按钮 */
.ui-button--ghost.ui-button--primary {
  background: transparent;
  color: #667eea;
  border: 2rpx solid #667eea;
}

.ui-button--ghost.ui-button--secondary {
  background: transparent;
  color: #495057;
  border: 2rpx solid #495057;
}

.ui-button--ghost.ui-button--success {
  background: transparent;
  color: #4facfe;
  border: 2rpx solid #4facfe;
}

.ui-button--ghost.ui-button--warning {
  background: transparent;
  color: #fa709a;
  border: 2rpx solid #fa709a;
}

.ui-button--ghost.ui-button--danger {
  background: transparent;
  color: #ff6b6b;
  border: 2rpx solid #ff6b6b;
}

/* 禁用状态 */
.ui-button--disabled {
  opacity: 0.6;
  cursor: not-allowed;
  pointer-events: none;
}

/* 加载状态 */
.ui-button--loading {
  cursor: wait;
  pointer-events: none;
}

/* 按钮内容 */
.ui-button__text,
.ui-button__content {
  flex: 1;
  text-align: center;
  line-height: 1;
}

/* 图标 */
.ui-button__icon {
  display: flex;
  align-items: center;
  justify-content: center;
}

.ui-button__icon--left {
  margin-right: 12rpx;
}

.ui-button__icon--right {
  margin-left: 12rpx;
}

.ui-button__icon text {
  font-size: inherit;
}

/* 加载图标 */
.ui-button__loading {
  margin-right: 12rpx;
}

.ui-button__loading-icon {
  width: 24rpx;
  height: 24rpx;
  border: 3rpx solid currentColor;
  border-top-color: transparent;
  border-radius: 50%;
  animation: ui-button-spin 1s linear infinite;
}

/* 小尺寸加载图标 */
.ui-button--small .ui-button__loading-icon {
  width: 20rpx;
  height: 20rpx;
  border-width: 2rpx;
}

/* 大尺寸加载图标 */
.ui-button--large .ui-button__loading-icon {
  width: 28rpx;
  height: 28rpx;
  border-width: 4rpx;
}

/* 旋转动画 */
@keyframes ui-button-spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .ui-button--large {
    height: 88rpx;
    font-size: 30rpx;
  }

  .ui-button--medium {
    height: 72rpx;
    font-size: 26rpx;
  }

  .ui-button--small {
    height: 56rpx;
    font-size: 22rpx;
  }
}
