<view
  class="{{buttonClass}}"
  bindtap="onTap"
  bindtouchstart="onTouchStart"
  bindtouchend="onTouchEnd"
  bindtouchcancel="onTouchCancel"
>
  <!-- 加载图标 -->
  <view wx:if="{{loading}}" class="ui-button__loading">
    <view class="ui-button__loading-icon"></view>
  </view>

  <!-- 左侧图标 -->
  <view wx:if="{{icon && iconPosition === 'left' && !loading}}" class="ui-button__icon ui-button__icon--left">
    <text class="iconfont {{icon}}"></text>
  </view>

  <!-- 按钮文本 -->
  <view wx:if="{{text}}" class="ui-button__text">{{text}}</view>

  <!-- 插槽内容 -->
  <view wx:else class="ui-button__content">
    <slot></slot>
  </view>

  <!-- 右侧图标 -->
  <view wx:if="{{icon && iconPosition === 'right' && !loading}}" class="ui-button__icon ui-button__icon--right">
    <text class="iconfont {{icon}}"></text>
  </view>
</view>
